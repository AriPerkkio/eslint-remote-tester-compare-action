{
    "name": "eslint-remote-tester-compare-action",
    "version": "0.0.1",
    "description": "GitHub Action for running eslint-remote-tester in comparison mode",
    "main": "dist/index.js",
    "repository": "https://github.com/AriPerkkio/eslint-remote-tester-compare-action",
    "homepage": "https://github.com/AriPerkkio/eslint-remote-tester-compare-action",
    "bugs": "https://github.com/AriPerkkio/eslint-remote-tester-compare-action",
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist && tsc --noEmit",
        "build": "node esbuild.config.js",
        "test": "jest"
    },
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@actions/exec": "^1.0.4",
        "@actions/github": "^4.0.0",
        "eslint-remote-tester": "^1.0.1",
        "semver": "^7.3.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/eslint": "^7.2.6",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.21",
        "@types/semver": "^7.3.4",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "esbuild": "^0.8.33",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "msw": "^0.26.0",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "!(dist)/**/*.{js,ts,tsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ]
    }
}
